// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // o "mysql" / "sqlite" seg√∫n uses
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  password  String
  role      Role
  creatures Creature[]
}

enum Role {
  MAESTRO
  CUIDADOR
}

model Creature {
  id     String @id @default(cuid())
  name   String
  type   String
  power  Int
  userId String
  user   User   @relation(fields: [userId], references: [id])
}

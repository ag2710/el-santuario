generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // Puedes cambiarlo a "postgresql" si lo prefieres
  url      = "file:./dev.db"
}

model User {
  id          String     @id @default(cuid())
  name        String
  email       String     @unique
  password    String
  role        Role
  description String
  criaturas   Criatura[] // Relaci√≥n inversa con Criatura
}

model Criatura {
  id        Int     @id @default(autoincrement())
  nombre    String
  tipo      String
  nivel     String
  entrenado Boolean
  userId    String
  user      User    @relation(fields: [userId], references: [id])
}

enum Role {
  cuidador
  maestro
}

{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["next-auth"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]  // âœ… Cambiado de "*" a "./*"
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
  "next-env.d.ts",
  "**/*.ts",
  "**/*.tsx",
  ".next/types/**/*.ts",
  "types/next-auth.d.ts", "types", "src"
]
,
  "exclude": ["node_modules"]
}
